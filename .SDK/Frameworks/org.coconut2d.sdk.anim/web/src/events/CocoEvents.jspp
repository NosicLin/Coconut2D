class CocoEventListener
{
	public var Event:CocoEvent;
	public var Callback:CocoEventHandler;

	public function Constructor(Event:CocoEvent, Callback:CocoEventHandler)
	{
		this.Event = Event;
		this.Callback = Callback;
	}

	public function Destructor()
	{
	}
}

