////////////////////////////////////////////////////////////////////////////////////////////////////
class CocoEventSource
{
	protected var __eventListeners:Array<CocoEventListener>

	////////////////////////////////////////////////////////////////////////////////////////////////////
	public function Constructor()
	{
		__eventListeners = new Array<CocoEventListener>;
	}

	////////////////////////////////////////////////////////////////////////////////////////////////////
	public function Destructor()
	{
		delete __eventListeners;
	}

	////////////////////////////////////////////////////////////////////////////////////////////////////
	public virtual function addEventListener(Event:CocoEvent, Callback:CocoEventHandler)
	{
		var item:CocoEventListener = new CocoEventListener(Event, Callback);
		__eventListeners.push(item);
	}

	////////////////////////////////////////////////////////////////////////////////////////////////////
	public virtual function removeEventListener(Event:CocoEvent, Callback:CocoEventHandler) :Boolean
	{
		var i:Integer;
		for(i=__eventListeners.size()-1;i>=0;i--)
		{
			if(__eventListeners[i].Event.is(Event) && __eventListeners[i].Callback==Callback)
			{
				__eventListeners.splice(i, 1);
				return true;
			}
		}
		return false;
	}

	////////////////////////////////////////////////////////////////////////////////////////////////////
	public virtual function dispatchEvent(Event:CocoEvent) :Integer
	{
		var i:Integer;
		var c:Integer;
		for(i=__eventListeners.size()-1;i>=0;i--)
		{
			if(__eventListeners[i].Event.is(Event))
			{
				c++;
				var Callback:CocoEventHandler = __eventListeners[i].Callback;
				var cancel:Boolean = Callback.call(this, __eventListeners[i].Event);
				if(cancel)
				{
					__eventListeners[i].Event.cancelBubble();
				}
				if(__eventListeners[i].Event.stopPropagation)
				{
					break;
				}
			}
		}
		return c;
	}

}
