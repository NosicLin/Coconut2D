	public static function ColorToHtmlRGBA(c:Color) :String
	{
		try
		{
			var A:Integer = ((c >> 24) & 0xFF);
			var R:Integer = ((c >> 16) & 0xFF);
			var G:Integer = ((c >>  8) & 0xFF);
			var B:Integer = ((c)       & 0xFF);

			return "rgba(" + String(R) + "," + String(G) + "," + String(B) + "," + String(A/255.0) + ")";
		}
		catch(e:Error)
		{
			return "rgba(0,0,0,0)";
		}
	}

